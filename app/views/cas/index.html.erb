<p id="notice"><%= notice %></p>

<h1>Certificate Authorities</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Organization</th>
      <th>Organization unit</th>
      <th>Common name</th>
      <th>State</th>
      <th>Locality</th>
      <th>Serial</th>
      <th>Not before</th>
      <th>Not after</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cas.each do |ca| %>
      <tr>
        <td><%= ca.country %></td>
        <td><%= ca.organization %></td>
        <td><%= ca.organization_unit %></td>
        <td><%= ca.common_name %></td>
        <td><%= ca.state %></td>
        <td><%= ca.locality %></td>
        <td><%= ca.serial %></td>
        <td><%= ca.not_before %></td>
        <td><%= ca.not_after %></td>
        <td><%= link_to 'Show', ca %></td>
        <td><%= link_to 'Destroy', ca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Certificates', ca_certificates_path(ca) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Certificate Authority', new_ca_path %>
<br>
<%= link_to 'Import Certificate Authority', import_ca_cas_path %>
